<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_white_replace"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_subscribe_alllable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px142"
        android:background="@drawable/selector_comm_item_click"
        android:gravity="center">

        <ImageView tools:ignore="contentDescription"
            android:id="@+id/iv_subscribe_alllable_photo"
            android:layout_width="@dimen/px90"
            android:layout_height="@dimen/px90"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px30"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/px80"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/px20"
            android:layout_toRightOf="@+id/iv_subscribe_alllable_photo"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_subscribe_alllable_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="top"
                android:textColor="@color/color_black"
                android:textSize="@dimen/font34"/>

            <TextView
                android:id="@+id/tv_subscribe_alllable_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:textColor="@color/text_gray_default"
                android:textSize="@dimen/font30"/>
        </LinearLayout>

        <ImageView
            tools:ignore="contentDescription"
            android:id="@+id/iv_subscribe_label"
            android:layout_width="@dimen/px120"
            android:layout_height="@dimen/px50"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/px40"
            android:scaleType="fitXY"
            android:src="@drawable/select_subscribe_btn"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/px1"
        android:background="@color/color_comm_line6"></View>

